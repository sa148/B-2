<h1>bookers</h1>
  <% @books.each do |book| %>
  <table Width="700">
    <thead>
      <tr>
        <th width="35%">title</th>
        <th width="35%">body</th>
        <th width="30%"colspan3></th>
      </tr>
    </thead>
    <tbody>
        <th><%= book.title %></th>
        <th><%= book.body %> </th>
        <th><%= link_to "show", book_path(book.id)%>  <%= link_to "edit", edit_book_path(book.id)%>  <%= link_to "destory", book_path(book.id), method: :delete%></th>
    </tbody>
  </table>
  <% end %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>
      <ul>
        <% @book.errors.full_messages.each do |message|%>
        <li><%= message%></li>
        <% end %>
      </ul>
  <% end %>
  <%= form_with mldel: @book do |f| %>
    <h4>title</h4>
    <%= f.text_field :title%>
    <h4>body</h4>
    <%= f.text_area :body%>
    <br><%= f.submit "Create Book"%>
  <% end %>